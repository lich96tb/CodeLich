<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/ends"
        motion:constraintSetStart="@+id/starts"
        motion:duration="1000">
        <!--<OnSwipe-->
            <!--motion:dragDirection="dragDown"-->
            <!--motion:touchAnchorId="@id/layoutBottomSheet"-->
            <!--motion:touchAnchorSide="top" />-->
    </Transition>

    <ConstraintSet android:id="@+id/starts">
        <Constraint android:id="@id/layoutBottomSheet">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="300dp"
               motion:layout_constraintTop_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/ends"
        motion:deriveConstraintsFrom="@id/starts">

        <Constraint android:id="@id/layoutBottomSheet">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>