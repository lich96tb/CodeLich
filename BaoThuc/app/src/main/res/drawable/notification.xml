<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:id="@+id/layout_notification"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtHeartbeat"
        android:layout_below="@+id/toolbara"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgTron4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/elip44" />

        <ImageView
            android:id="@+id/imgTron3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/elip33" />

        <ImageView
            android:id="@+id/imgTron2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/elip22" />

        <ImageView
            android:id="@+id/imgTron1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/elip11" />

        <ImageView
            android:id="@+id/imgLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_love2" />
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have you measured your heart rate today?"/>
</LinearLayout>
