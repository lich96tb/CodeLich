<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#14074C"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_eye_w"
            android:layout_width="20dp"
            android:layout_height="12dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/txtxxx"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="Eye Protector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="RtlCompat" />
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_sound"
                android:id="@+id/swtNightModeNo"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Night Mode"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgFlash"
                android:background="@drawable/background_noti_2"
                android:padding="8dp"
                android:src="@drawable/ic_flash"
                android:layout_centerHorizontal="true"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:layout_alignParentBottom="true"
                android:text="Flashlight"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSound"
                android:src="@drawable/ic_sound"
                android:background="@drawable/background_noti"
                android:padding="8dp"
                android:layout_centerHorizontal="true"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:layout_alignParentBottom="true"
                android:text="Sound"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>
