<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="java.lang.Integer" />

        <variable
            name="session"
            type="com.melodymediation.sleepstories.data.room.Session"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="36dp"
        android:paddingRight="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_lesson_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.01"
            android:text="1" />

        <TextView
            android:id="@+id/tv_lesson_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.01"
            android:layout_marginLeft="30dp"
            android:text="@{session.name}" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_lock_session"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_lock">

                <ImageView
                    android:id="@+id/iv_lock_lesson"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_play" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout >

</layout>
