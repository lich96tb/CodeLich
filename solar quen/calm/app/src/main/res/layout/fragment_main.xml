<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.melodymediation.sleepstories.ui.MainFragment">

    <RelativeLayout
        android:id="@+id/fragmentHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>
    <FrameLayout
        android:id="@+id/player_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false" />
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayouts"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="#E1000000"
        app:tabMode="fixed"
        app:tabIndicatorHeight="0dp"
        app:tabGravity="fill"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabSelectedTextColor="@color/colorTabSelect"
        app:tabTextColor="@color/colorTextSelect" />

    <ImageView
        android:id="@+id/imgv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true" />

</RelativeLayout>
